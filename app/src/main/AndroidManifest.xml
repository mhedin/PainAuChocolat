<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="morgane.fr.painauchocolat" >

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="AA_DB_NAME" android:value="PainAuChocolat.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.BringerActivity"
            android:label="@string/app_name"/>

        <activity android:name=".activities.ManageContributorsActivity"
            android:label="@string/manage_contributors"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".activities.SettingsActivity"
            android:label="@string/action_settings"/>

    </application>

</manifest>
