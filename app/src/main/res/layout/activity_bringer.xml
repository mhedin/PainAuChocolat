<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/ecru"
    tools:context=".BringerActivity">

    <TextView
        android:id="@+id/bringer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bringer_buttons"
        android:background="@drawable/bringer_background_colored"
        android:paddingBottom="35dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/bringer_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <Button
            android:id="@+id/bringer_validate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/validate_bringer"/>

        <Button
            android:id="@+id/bringer_another"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/give_another_bringer"/>

    </LinearLayout>

</RelativeLayout>
