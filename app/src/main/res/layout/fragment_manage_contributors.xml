<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageContributorsActivity">

    <TextView
        android:id="@+id/manage_contributors_none_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_contributors"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:drawablePadding="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableBottom="@drawable/arrow_top_to_bottom_right"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/manage_contributors_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/manage_contributors_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"/>

    <FrameLayout
        android:id="@+id/manage_contributors_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
